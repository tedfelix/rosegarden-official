<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE rosegarden-keyboard-layouts>

<rosegarden_keyboards>

  <!--
      # Keyboard presets for the shortcut editor
  -->

  <keyboard>
    <name>English (qwerty)</name>
    <shortcuts>
    </shortcuts>
  </keyboard>

  <keyboard>
    <name>German (qwertz)</name>
    <shortcuts>
      <shortcut src="Y" dest="Z" />
      <shortcut src="Z" dest="Y" />
      <shortcut src="Shift+Z" dest="Shift+Y" />
      <shortcut src="Shift+Y" dest="Shift+Z" />
    </shortcuts>
  </keyboard>

  <keyboard>
    <name>French (azerty)</name>
    <shortcuts>
      <shortcut src="A" dest="Q" />
      <shortcut src="Shift+A" dest="Shift+Q" />
      <shortcut src="Q" dest="A" />
      <shortcut src="Shift+Q" dest="Shift+A" />
      <shortcut src="W" dest="Z" />
      <shortcut src="Shift+W" dest="Shift+Z" />
      <shortcut src="Ctrl+Shift+W" dest="Ctrl+Shift+Z" />
      <shortcut src="Z" dest="W" />
      <shortcut src="Shift+Z" dest="Shift+W" />
      <shortcut src="," dest="M" />
      <shortcut src="Ctrl+Shift+," dest="Ctrl+Shift+M" />
    </shortcuts>
  </keyboard>

</rosegarden_keyboards>
